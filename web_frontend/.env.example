# Ping Monitor Application - Environment Variables
# Copy this file to .env and update with actual values

# API Configuration
REACT_APP_API_BASE=http://localhost:3000
REACT_APP_BACKEND_URL=http://localhost:3000
REACT_APP_FRONTEND_URL=http://localhost:3000
REACT_APP_WS_URL=ws://localhost:3000

# Application Configuration
REACT_APP_NODE_ENV=development
REACT_APP_PORT=3000

# Build Configuration
REACT_APP_NEXT_TELEMETRY_DISABLED=1
REACT_APP_ENABLE_SOURCE_MAPS=true

# Server Configuration
REACT_APP_TRUST_PROXY=false
REACT_APP_HEALTHCHECK_PATH=/health

# Logging
REACT_APP_LOG_LEVEL=info

# Feature Flags
REACT_APP_FEATURE_FLAGS=false
REACT_APP_EXPERIMENTS_ENABLED=false
